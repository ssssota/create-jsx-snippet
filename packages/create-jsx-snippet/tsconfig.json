{
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"isolatedDeclarations": true,
		"verbatimModuleSyntax": true,
		"rootDir": "src",
		"outDir": "dist"
	}
}
